{
  "title": "Slack Ctrl+N/P Remapping",
  "rules": [
    {
      "description": "Remap Ctrl+N to Down arrow in Slack",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.tinyspeck\\.slackmacgap$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Remap Ctrl+P to Up arrow in Slack",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.tinyspeck\\.slackmacgap$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
